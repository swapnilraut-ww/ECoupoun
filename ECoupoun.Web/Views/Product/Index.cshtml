                        </div>*@
                </li>
            }
        </ul>
    </div>

    @if (ViewBag.SubCategories.Count > 0)
    {
        <div class="rightsidebar span_3_of_1">
            <h2>CATEGORIES</h2>
            <ul>
                @foreach (var item in ViewBag.SubCategories)
                {
                    <li><a href="/buy_sub_@item.MappingName">@item.Name</a></li>
                }
            </ul>
        </div>
    }
</div>
