                <li><a href="#">3</a></li>
                <li>[<a href="#"> Next>>></a>]</li>
            </ul>
        </p>
    </div>
    <div class="clear"></div>
</div>
<div class="section group">
    @foreach (var item in Model.Take(4))
    {
        <div class="grid_1_of_4 images_1_of_4">
            <a href="preview-3.html"><img src="@item.ImageUrl" alt="" /></a>
            <h2>@item.ProductName </h2>
            <p><span class="price">@item.SalePrice</span></p>
            <div class="button"><span><a href="javascript:void(0)" data-providerId="@item.ProviderId" data-sku="@item.Sku" data-url="@item.ProductUrl" class="details viewproduct">View</a></span></div>
